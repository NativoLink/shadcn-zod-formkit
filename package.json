{
  "name": "shadcn-zod-formkit",
  "version": "1.9.0",
  "description": "Create dynamic forms easily using React, Zod, React Hook Form, and Shadcn UI.",
  "license": "MIT",
  "author": "Luis A. Rosario <ingluisrosario15@gmail.com>",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NativoLink/shadcn-zod-formkit.git"
  },
  "scripts": {
    "dev": "npm run build:css && tsup --watch",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/tailwind.css --minify",
    "build": "npm run build:css && tsup",
    "example:dev": "cd example && npm run dev",
    "dev:all": "concurrently \"npm:dev\" \"npm:example:dev\"",
    "lint": "eslint .",
    "test": "vitest run",
    "test:ui": "vitest"
  },
  "workspaces": [
    "example"
  ],
  "keywords": [
    "react",
    "form",
    "form-builder",
    "react-hook-form",
    "zod",
    "radix-ui",
    "shadcn",
    "typescript",
    "ui",
    "components"
  ],
  "private": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "license.md"
  ],
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/cli": "^4.1.16",
    "@tailwindcss/postcss": "^4.1.15",
    "class-variance-authority": "^0.7.1",
    "cmdk": "^1.1.1",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.546.0",
    "next-themes": "^0.4.6",
    "react-color-palette": "^7.3.1",
    "react-day-picker": "^9.11.1",
    "react-hook-form": "^7.65.0",
    "react-resizable-panels": "^3.0.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.1.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "semantic-release": "^25.0.1",
    "tailwindcss": "^4.1.16",
    "tsup": "^8.5.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.6.3",
    "vite": "npm:rolldown-vite@7.1.14",
    "vitest": "^3.2.4",
    "zod": "^4.1.12"
  },
  "vitest": {
    "environment": "jsdom"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  }
}
